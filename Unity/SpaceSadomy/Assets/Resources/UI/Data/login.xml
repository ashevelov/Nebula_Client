<group zorder="1" name="login" left="30pc" top="20pc" width="300px" height="300px">
  <texture name="glass" width="100pc" height="100pc" texture="UI/Textures/transparent" material="Glass" zorder="0" />
  <box name="back" skin="game" style="box" width="100pc" height="100pc" />
  
  <label name="label_login" left="10" top="19" skin="game" style="font_upper_left">Login:</label>
  <textfield name="textfield_login" left="100" top="10" width="190" height="30" skin="game" style="textfield">
    <event name="LOGIN_TYPED"></event>
  </textfield>
  
  <label name="label_password" left="10" top="59" skin="game" style="font_upper_left">Password:</label>
  <password name="textfield_password" left="100" top="50" width="190" height="30" skin="game" style="textfield">
    <event name="PASSWORD_TYPED"></event>
  </password>
  
  <label name="label_name" left="10" top="99" skin="game" style="font_upper_left">Name:</label>
  <textfield name="textfield_name" left="100" top="90" width="190" height="30" skin="game" style="textfield">
    <event name="NAME_TYPED"></event>
  </textfield>
  
  <label name="label_error" left="10" top="160" width="280" skin="game" style="font_arial" />
  
  <button name="button_login" width="100" height="30" skin="game" style="button" left="100" top="260" text="Login">
    <event name="LOGIN_CLICKED">
      <parameters></parameters>
    </event>
  </button>
  
</group>